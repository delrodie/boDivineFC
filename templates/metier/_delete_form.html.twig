<form method="post" action="{{ path('backend_metier_delete', {'id': metier.id}) }}" onsubmit="return confirm('Voulez-vous vraiment supprimer ce metier?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ metier.id) }}">
    <button class="btn btn-danger">Supprimer</button>
</form>
