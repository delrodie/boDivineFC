{{ form_start(form) }}
<div class="row form-group">
    <div class="col-md-12 mt-3">{{ form_row(form.titre) }}</div>
    <div class="col-md-12 mt-3">{{ form_row(form.contenu) }}</div>
    <div class="col-md-12 mt-3">
        <div class="row">
            <div class="col-md-8">
                <label for="">Télécharger la photo</label>
                <div class="custom-file">
                    {{ form_widget(form.media) }}
                    <label for="slide_media" class="custom-file-label">Telecharger la photo</label>
                </div>
            </div>
            <div class="col-md-4"><img class="preview img-thumbnail" /></div>
        </div>
    </div>
    <div class="col-md-12 mt-3">
        <div class="custom-control custom-checkbox">
            {{ form_widget(form.statut) }}
            <label class="custom-control-label" for="metier_statut">Statut</label>
        </div>
    </div>
</div>
{{ form_widget(form) }}
    <div class="text-right mt-5">
        <a href="{{ path('backend_metier_index') }}" class="btn btn-outline-secondary">Annuler</a>
        <button class="btn btn-primary">{{ button_label|default('Enregistrer') }}</button>
    </div>
{{ form_end(form) }}
