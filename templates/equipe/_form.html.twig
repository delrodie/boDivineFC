{{ form_start(form) }}
<div class="row">
    <div class="col-md-10 offset-1">
        <div class="row form-group">
            <div class="col-md-12 mt-3">{{ form_row(form.nom) }}</div>
            <div class="col-md-12 mt-3">
                <div class="row">
                    <div class="col-md-7">{{ form_row(form.fonction) }}</div>
                    <div class="col-md-5">{{ form_row(form.email) }}</div>
                </div>
            </div>
            <div class="col-md-12 mt-3">{{ form_row(form.biographie) }}</div>
            <div class="col-md-6 mt-3">
                <div class="row">
                    <div class="col-md-12 mt-3">{{ form_row(form.ordre) }}</div>
                    <div class="col-md-12 mt-3">
                        <label for="">Télécharger la photo</label>
                        <div class="custom-file">
                            {{ form_widget(form.media) }}
                            <label for="slide_media" class="custom-file-label">Telecharger la photo</label>
                        </div>
                    </div>
                    <div class="col-md-12 mt-3">{{ form_row(form.facebook) }}</div>
                    <div class="col-md-12 mt-3">{{ form_row(form.twitter) }}</div>
                    <div class="col-md-12 mt-3">{{ form_row(form.linkedin) }}</div>
                </div>
            </div>
            <div class="col-md-6">
                <img class="preview img-thumbnail" />
                {% if equipe.media %}
                    <img src="{{ absolute_url(asset('uploads/equipe/'~ equipe.media)) }}" alt="" class="img-thumbnail">
                {% endif %}
            </div>
        </div>
        <div class="text-right">
            {{ form_widget(form) }}
            <a href="{{ path('backend_domaine_index') }}" class="btn btn-outline-secondary">Annuler</a>
            <button class="btn btn-primary">{{ button_label|default('Enregistrer') }}</button>
        </div>
    </div>
</div>

{{ form_end(form) }}
